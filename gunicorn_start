#!/bin/bash
NAME="crmplus"
DJANGODIR=/var/www/crmplus.balegogroup.com/htdocs
SOCKFILE=/var/www/crmplus.balegogroup.com/run/gunicorn.sock
LOGFILE=/var/www/crmplus.balegogroup.com/logs/gunicorn.log
USER=root
GROUP=root
NUM_WORKERS=3
DJANGO_SETTINGS_MODULE=crmplus.settings
DJANGO_WSGI_MODULE=crmplus.wsgi

echo "Starting $NAME as `whoami`"

cd $DJANGODIR
source env/bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH

RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

exec env/bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers $NUM_WORKERS \
  --user=$USER --group=$GROUP \
  --bind=unix:$SOCKFILE \
  --log-level=debug \
  --log-file=-
